<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<AnchorPane prefHeight="436.0" prefWidth="521.0" style="-fx-background-color: #2B82E0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.filip.controller.FormController">
    <children>

        <VBox alignment="TOP_CENTER" layoutX="20" layoutY="20" spacing="10">

            <TextField fx:id="firstNameField" promptText="Imię" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ccc; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, gray, 5, 0.5, 0, 2);" />
            <TextField fx:id="secondNameField" promptText="Nazwisko" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ccc; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, gray, 5, 0.5, 0, 2);" />
            <TextField fx:id="emailField" promptText="Email" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ccc; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, gray, 5, 0.5, 0, 2);" />
            <PasswordField fx:id="passwordField" promptText="Hasło" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ccc; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, gray, 5, 0.5, 0, 2);" />
            <TextArea fx:id="noteArea" promptText="Notatka" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ccc; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, gray, 5, 0.5, 0, 2);" />
            <HBox spacing="20"
                  alignment="CENTER"
                  prefWidth="300"
                  style="-fx-padding: 10;">
                <Button fx:id="backButton"
                        text="← Wróć"
                        onAction="#handleBack"
                        HBox.hgrow="ALWAYS"
                        style="-fx-background-color: #7a7a7a; -fx-text-fill: white; -fx-background-radius: 20; -fx-border-radius: 20; -fx-padding: 10 20 10 20; -fx-font-size: 14px; -fx-cursor: hand;" />
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="saveButton"
                        text="Zapisz"
                        onAction="#handleSave"
                        style="-fx-background-color: #7a7a7a; -fx-text-fill: white; -fx-background-radius: 20; -fx-border-radius: 20; -fx-padding: 10 20 10 20; -fx-font-size: 14px; -fx-cursor: hand;" />
            </HBox>
            <Label fx:id="statusLabel" />
        </VBox>
    </children>

</AnchorPane>
