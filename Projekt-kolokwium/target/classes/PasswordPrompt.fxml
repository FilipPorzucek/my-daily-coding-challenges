<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pl.filip.controller.PasswordPromptController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <Label text="Podaj hasło, aby zobaczyć notatkę" />
            <PasswordField fx:id="passwordField" promptText="Hasło" />
            <Button text="Odszyfruj" onAction="#handleDecrypt" />
            <Label fx:id="statusLabel" />
        </VBox>
    </children>


</AnchorPane>
