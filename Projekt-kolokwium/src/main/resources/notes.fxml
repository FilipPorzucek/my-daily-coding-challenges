<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pl.filip.controller.NotesController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #2B82E0;">

    <children>
        <VBox spacing="10" alignment="CENTER"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0"
              AnchorPane.bottomAnchor="0.0"
              style="-fx-padding: 20;">


            <Label text="Twoje notatki"
                   style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;" />


            <ScrollPane fitToWidth="true" prefHeight="300">
                <content>
                    <VBox fx:id="notesPane" spacing="10" alignment="CENTER"  />
                </content>
            </ScrollPane>


            <Button onAction="#handleAddNote" text="Dodaj nową notatkę"

                    style="-fx-background-color: #7a7a7a; -fx-text-fill: white; -fx-background-radius: 20; -fx-border-radius: 20; -fx-padding: 10 20 10 20; -fx-font-size: 14px; -fx-cursor: hand;" />
        </VBox>
    </children>

</AnchorPane>
